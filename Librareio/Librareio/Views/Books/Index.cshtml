@model IEnumerable<Librareio.Models.Book>

@{
    ViewData["Title"] = "My Books";
}
<br />
<br />
<h1>My Books</h1>
<br />
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="card-container">
    @foreach (var item in Model)
    {
        <br />
        <div class="card">
            <div class="card-inner">
                <!-- Front of the card -->
                <div class="card-front">
                    @if (item.DisplayImage != null)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.DisplayImage)" alt="@item.BookName" class="card-image" />
                    }
                </div>
                <!-- Back of the card -->
                <div class="card-back">
                    <h3 class="card-title">@item.BookName</h3>
                    <p class="card-author">@item.Author</p>
                    <a href="@Url.Action("DownloadPdf", "Books", new { id = item.SubmissionId })" target="_blank" class="btn btn-primary">Read</a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    /* Your existing CSS styles */
    body {
        font-family: 'League Spartan', sans-serif;
        margin: 0;
        padding: 0;
        height: 100vh;
        background-image: url("https://images7.alphacoders.com/735/735772.png");
        background-size: 100%;
        background-repeat: no-repeat;
        background-position: center;
    }

    h1 {
        color: white;
        font-family: 'Century Gothic';
        font-weight: 600;
        font-size: 63px;
    }

    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

    .card {
        position: relative;
        width: 200px;
        height: 300px;
        perspective: 1000px;
    }

    .card-inner {
        position: absolute;
        width: 100%;
        height: 100%;
        transform-style: preserve-3d;
        transition: transform 0.6s;
        transform-origin: center;
    }

    .card:hover .card-inner {
        transform: rotateY(180deg);
    }

    .card-front, .card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        border: 1px solid #ccc;
        border-radius: 5px;
        overflow: hidden;
        background: #fff;
    }

    .card-front {
        background: #fff;
    }

    .card-back {
        transform: rotateY(180deg);
        text-align: center;
        padding: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .card-title {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .card-author {
        font-size: 14px;
        margin-bottom: 20px;
    }

    .card-image {
        max-width: 100%;
        max-height: 100%;
        object-fit: cover;
    }

    .btn-primary {
        background-color: #401d5d;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        font-size: 14px;
        display: inline-block;
        text-align: center;
    }

        .btn-primary:hover {
            background-color: #301a4e;
        }
</style>
