@{
    ViewData["Title"] = "Video Player";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Century Gothic', sans-serif;
            background: radial-gradient(circle, #073a70, #01021c); /* Circular gradient background */
            margin: 0;
            padding: 0;
            height: 100vh;
            color: #ffffff; /* Default text color for contrast */
        }

        .container {
            text-align: center;
        }

        .video-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 60vh; /* Adjust height if needed */
            padding: 20px;
        }

        video {
            border-radius: 10px;
            max-width: 70%;
            height: auto;
        }

        h1 {
            font-size: 2.5rem; /* Adjust font size if needed */
            padding-top:100px;
            font-weight:600;
            font-family:Century Gothic;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Watch Now</h1>
        <div class="video-container">
            <video controls>
                <source src="~/videos/episode.mp4" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
